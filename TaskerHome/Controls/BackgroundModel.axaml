<Control xmlns="https://github.com/avaloniaui"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:cvm="clr-namespace:TaskerHome.ControlViewModels"
         x:Class="TaskerHome.Controls.BackgroundModel"
         HorizontalAlignment="Stretch"
         VerticalAlignment="Stretch"
         SizeChanged="OnSizeChanged">
    <!-- Используется SKElement для рендеринга -->
    <Design.DataContext>
        <cvm:BackgroundModelViewModel/>
    </Design.DataContext>
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <SKCanvasControl Name="BackgroundCanvasControl" 
                              Draw="OnDraw"
                              VerticalAlignment="Stretch"
                              HorizontalAlignment="Stretch"/>
    </Grid>
</Control>